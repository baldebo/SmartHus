<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ebaldebo.bluetootharduino.Arduino"
    android:background="@color/colorPrimary">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:layout_centerHorizontal="true"
        android:id="@+id/header"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/background_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disconnect"
        android:id="@+id/disconnect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:text="Speech to Text"
        android:layout_height="wrap_content"
        android:id="@+id/stt"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Lampa1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/lampa1"
        android:layout_below="@+id/stt"
        android:textSize="20sp"
        android:textColor="#FFFF"/>

    <TextView
        android:text="Lampa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/lampa2"
        android:layout_below="@+id/lampa1"
        android:textSize="20sp"
        android:textColor="#FFFF"/>

    <TextView
        android:text="Lampa3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/lampa3"
        android:layout_below="@+id/lampa2"
        android:textSize="20sp"
        android:textColor="#FFFF"/>

    <TextView
        android:text="Temperatur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/temp"
        android:layout_below="@+id/lampa3"
        android:textSize="20sp"
        android:textColor="#FFFF"/>

    <TextView
        android:text="FÃ¶nster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/window"
        android:layout_below="@+id/temp"
        android:textSize="20sp"
        android:textColor="#FFFF"/>

    <TextView
        android:text="Larm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/larm"
        android:layout_below="@+id/window"
        android:textSize="20sp"
        android:textColor="#FFFF"/>
    



</RelativeLayout>
